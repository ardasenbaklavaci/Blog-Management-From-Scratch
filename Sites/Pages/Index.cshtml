@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@using CM.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Bootstrap Blog</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        header {
            background-color: #343a40;
            color: #fff;
            padding-top: 20px;
            padding-bottom: 20px;
        }

        header h1 {
            margin: 0;
            font-size: 32px;
        }

        .nav-link {
            color: #fff;
        }

        .nav-link:hover {
            color: #dee2e6;
        }

        main {
            padding-top: 20px;
            padding-bottom: 20px;
        }

        article {
            background-color: #fff;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        footer {
            background-color: #343a40;
            color: #fff;
            padding-top: 10px;
            padding-bottom: 10px;
        }
    </style>
</head>
<body>
    <header>

        @{
            void RenderMenuItem(TreeNode node)
            {

                if (node.tree.childcount == 0)
                {                 
                    <li class="nav-item">
                        <a class="nav-link" href="#">@node.tree.name</a>
                    </li>
                }
                else
                {
                    

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            @node.tree.name
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">

                            
                            @foreach (var childNode in node.Children)
                            {
                                <li><a class="dropdown-item" href="#">@childNode.tree.name</a></li>
                            }
                        </ul>
                    </li>
                }

            }
        }

        <div class="container">
            <h1>My Bootstrap Blog</h1>
            <nav>
                <ul class="nav">


                    @foreach (var rootNode in Model.firstnodes)
                    {
                        RenderMenuItem(rootNode);
                    }


                </ul>
            </nav>
        </div>
    </header>

    <main class="container">
        <article>
            <h2>Exploring the Great Outdoors</h2>
            <p>Have you ever dreamed of trekking through lush forests, scaling towering mountains, and gazing upon breathtaking vistas? Join us as we embark on an adventure to explore the great outdoors!</p>
            <p>From camping tips to hiking trails, our blog covers everything you need to know to make the most of your outdoor adventures. So grab your backpack and let's hit the trail!</p>
        </article>

        <article>
            <h2>Cooking Up a Storm</h2>
            <p>Are you a culinary enthusiast looking to expand your repertoire in the kitchen? Look no further! Our blog is filled with delicious recipes, cooking hacks, and culinary inspiration.</p>
            <p>From gourmet delights to comfort classics, we've got something for every palate. So roll up your sleeves, dust off your apron, and let's get cooking!</p>
        </article>
    </main>

    <footer>
        <div class="container">
            <p>&copy; 2024 My Bootstrap Blog</p>
        </div>
    </footer>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
