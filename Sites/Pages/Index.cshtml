@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@using CM.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.root.tree.title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        header {
            background-color: #343a40;
            color: #fff;
            padding-top: 20px;
            padding-bottom: 20px;
        }

        header h1 {
            margin: 0;
            font-size: 32px;
        }

        .nav-link {
            color: #fff;
        }

        .nav-link:hover {
            color: #dee2e6;
        }

        main {
            padding-top: 20px;
            padding-bottom: 20px;
        }

        article {
            background-color: #fff;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        footer {
            background-color: #343a40;
            color: #fff;
            padding-top: 10px;
            padding-bottom: 10px;
        }
    </style>
</head>
<body>
    <header>

        @{
            void RenderMenuItem(TreeNode node)
            {
                if (node.tree.childcount == 0)
                {                 
                    <li class="nav-item">
                        <a class="nav-link" href="#">@node.tree.name</a>
                    </li>
                }
                else
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            @node.tree.name
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">

                            
                            @foreach (var childNode in node.Children)
                            {
                                <li><a class="dropdown-item" href="#">@childNode.tree.name</a></li>
                            }
                        </ul>
                    </li>
                }
            }
        }

        <div class="container">
            <h1>@Model.root.tree.title</h1>
            <nav>
                <ul class="nav">

                    @foreach (var rootNode in Model.firstnodes)
                    {
                        RenderMenuItem(rootNode);
                    }

                </ul>
            </nav>
        </div>

    </header>

    <main class="container">
        @Html.Raw(Model.mainHtml)
    </main>

    <footer>
        <div class="container">
            <p>&copy; 2024 My Bootstrap Blog</p>
        </div>
    </footer>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
